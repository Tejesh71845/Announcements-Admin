<mvc:View
    controllerName="com.incture.announcements.controller.CreateBannerAnnouncement"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    displayBlock="true"
>
    <Page
        id="idBannerPage"
        showHeader="true"
    >
        <customHeader>
            <core:Fragment
                fragmentName="com.incture.announcements.fragments.ShellBar"
                type="XML"
            />
        </customHeader>

        <content>
            <VBox
                class="sapUiSmallMargin"
                fitContainer="true"
            >
                <!-- Header Section -->
                <VBox class="sapUiSmallMarginBottom">
                    <HBox
                        alignItems="Center"
                        class="sapUiSmallMarginBottom"
                    >
                        <Button
                            id="idBannerNavBackBtn"
                            icon="sap-icon://nav-back"
                            type="Transparent"
                            press="onNavBack"
                        />
                        <Title
                            text="{i18n>createBannerAnnouncementTitle}"
                            class="sapUiTinyMarginBegin"
                        />
                    </HBox>
                    <Text
                        text="{i18n>bannerDescText}"
                        class="sapUiTinyMarginTop"
                    />
                </VBox>

                <!-- Announcement Content Section -->
                <VBox
                    class="announcementDetailsSectionCss sapUiSmallMarginBottom"
                >
                    <Label
                        text="{i18n>announcementContentLabel}"
                        required="true"
                        class="sapUiTinyMarginBottom"
                    />
                    <Input
                        id="idBannerAnnouncementContentFld"
                        placeholder="{i18n>announcementContentPlaceholder}"
                        value="{bannerModel>/announcementContent}"
                        valueState="{bannerModel>/announcementContentValueState}"
                        valueStateText="{bannerModel>/announcementContentValueStateText}"
                        maxLength="100"
                        width="100%"
                        change="onInputChange"
                        liveChange="onContentLiveChange"
                    />
                    <HBox
                        justifyContent="End"
                        class="sapUiTinyMarginTop"
                    >
                        <Text text="{bannerModel>/contentCharCount}" />
                    </HBox>
                </VBox>

                <!-- Publishing Settings Section -->
                <VBox class="publishingSettingsSectionCss sapUiSmallMarginTop">
                    <Title
                        text="{i18n>publishingSettingsSection}"
                        level="H2"
                        class="sapUiSmallMarginBottom"
                    />
                    <l:Grid
                        defaultSpan="L4 M6 S12"
                        hSpacing="1"
                        vSpacing="1"
                    >
                        <VBox>
                            <Label
                                text="{i18n>publishDateLabel}"
                                required="true"
                                class="sapUiTinyMarginBottom"
                            />
                            <DatePicker
                                id="idBannerPublishDateDP"
                                value="{bannerModel>/publishDate}"
                                valueState="{bannerModel>/publishDateValueState}"
                                valueStateText="{bannerModel>/publishDateValueStateText}"
                                displayFormat="MM-dd-yyyy"
                                valueFormat="yyyy-MM-dd"
                                minDate="{bannerModel>/minPublishDate}"
                                change="onPublishDateChange"
                                placeholder="{i18n>datePlaceholder}"
                                width="100%"
                                enabled="{bannerModel>/publishDateEnabled}"
                            />
                            <Text
                                text="{i18n>publishDateHelpText}"
                                class="sapUiTinyMarginTop"
                                visible="{bannerModel>/showPublishTodayText}"
                            />
                        </VBox>

                        <VBox>
                            <Label
                                text="{i18n>expiryDateLabel}"
                                required="true"
                                class="sapUiTinyMarginBottom"
                            />
                            <DatePicker
                                id="idBannerExpiryDateDP"
                                value="{bannerModel>/expiryDate}"
                                valueState="{bannerModel>/expiryDateValueState}"
                                valueStateText="{bannerModel>/expiryDateValueStateText}"
                                displayFormat="MM-dd-yyyy"
                                valueFormat="yyyy-MM-dd"
                                minDate="{bannerModel>/minExpiryDate}"
                                change="onExpiryDateChange"
                                placeholder="{i18n>datePlaceholder}"
                                width="100%"
                            />
                            <Text
                                text="{i18n>bannerExpiryDateHelpText}"
                                class="sapUiTinyMarginTop"
                                wrapping="true"
                            />
                        </VBox>

                        <VBox>
                            <Label
                                text="{i18n>publishLaterLabel}"
                                class="sapUiTinyMarginBottom"
                            />
                            <HBox alignItems="Center">
                                <Switch
                                    id="idBannerPublishLaterSwitch"
                                    state="{bannerModel>/publishLater}"
                                    customTextOn=" "
                                    customTextOff=" "
                                    change="onPublishLaterChange"
                                />
                                <Text
                                    text="{i18n>publishLaterHelpText}"
                                    class="sapUiTinyMarginBegin"
                                    wrapping="true"
                                />
                            </HBox>
                        </VBox>
                    </l:Grid>
                </VBox>
            </VBox>
        </content>

        <footer>
            <!-- <OverflowToolbar>
                <ToolbarSpacer />
                <Button
                    id="idBannerResetBtn"
                    text="{i18n>resetButton}"
                    press="onResetPress"
                    visible="{bannerModel>/showResetButton}"
                />
                <Button
                    id="idBannerSubmitBtn"
                    text="{i18n>submitButton}"
                    type="Emphasized"
                    press="onSubmitPress"
                />
            </OverflowToolbar> -->

            <Toolbar>
                <ToolbarSpacer />
                <Button
                    text="{i18n>resetButton}"
                    press="onResetPress"
                    visible="{sidebarModel>/showResetButton}"
                />
                <Button
                    text="{i18n>submitButton}"
                    type="Emphasized"
                    press="onSubmitPress"
                />
            </Toolbar>
        </footer>
    </Page>
</mvc:View>
